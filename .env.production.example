# ============================================================================
# Production Environment Variables
# ============================================================================
# IMPORTANT: Copy this file to .env.production and fill in the values
# NEVER commit .env.production to Git!
# ============================================================================

# Domain Configuration
DOMAIN_NAME=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DB_USER=microservices_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Service Secret Keys (Generate with: openssl rand -hex 32)
USER_SERVICE_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
PRODUCT_SERVICE_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
ORDER_SERVICE_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# Service-to-Service Authentication
SERVICE_SECRET=CHANGE_ME_STRONG_SERVICE_SECRET

# Field Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FIELD_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_FERNET

# JWT Configuration (Keys generated automatically on first run)
JWT_PRIVATE_KEY_PATH=/app/keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/jwt_public.pem

# Logging
LOG_LEVEL=INFO

# Email Configuration (for 2FA notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================================
# Security Notes
# ============================================================================
# 1. Generate strong passwords (32+ characters)
# 2. Use different secrets for each service
# 3. Rotate secrets every 90 days
# 4. Store secrets in a secrets manager (Vault, AWS Secrets Manager)
# 5. Never commit this file to Git
# ============================================================================
